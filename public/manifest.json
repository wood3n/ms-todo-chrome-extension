{
  "manifest_version": 3,
  "name": "MS Todo",
  "description": "Manage your Microsoft To Do data",
  "version": "1.0",
  "action": {
    "default_icon": {
      "16": "extension_icon@16px.png",
      "32": "extension_icon@32px.png",
      "48": "extension_icon@48px.png",
      "128": "extension_icon@128px.png"
    },
    "default_title": "点击打开Todo"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["identity", "contextMenus", "storage", "notifications", "sidePanel", "alarms", "unlimitedStorage"],
  "icons": {
    "16": "extension_icon@16px.png",
    "32": "extension_icon@32px.png",
    "48": "extension_icon@48px.png",
    "128": "extension_icon@128px.png"
  },
  "host_permissions": ["https://*/*", "http://*/*"]
}
